<div class="container">
    <h1 class="text-center">Sign In</h1>
    <br>
    <form>
        <div class="form-group col-lg-6 mx-auto">
            <label for="email-input">Email address</label>
            <input type="email" class="form-control" id="email-input" placeholder="jvotto@yahoo.com" required>
        </div>
        <div class="form-group col-lg-6 mx-auto">
            <label for="password-input">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Password" required>
        </div>
        <br>
        <div class="col-lg-6 mx-auto">
            <button type="submit" class="btn btn-primary col-12" id="submit">Log In</button>
        </div>
        <br>
    </form>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signin.js"></script>