<div class="container" style="margin-top:120px;">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">
    
                <div class="ibox-content m-b-sm border-bottom" style="background-color:  rgba(70, 69, 69, 0.555); color:white;border: 4px solid #000000a1;">
                    <div class="p-xs">
                        <div class="pull-left m-r-md">
                            <i class="fa fa-globe text-navy mid-icon"></i>
                        </div>
                        <h2 style="font-family: 'Michroma', sans-serif;text-shadow:
                        -1px -1px 0 #000,
                        1px -1px 0 #000,
                        -1px 1px 0 #000,
                        1px 1px 0 #000;">View All Posts:</h2>
                        {{!-- <span style="font-family: 'Krub', sans-serif;
                        font-size:18px;">Feel free to choose topic you're interested in.</span> --}}
                    </div>
                </div>
    
                <div class="ibox-content forum-container" style="background-color: rgba(70, 69, 69, 0.555); color:white;border: 4px solid #000000a1;height:900px;">    
                    <div class="forum-item active">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="forum-icon">
                                    <i class="fa fa-shield"></i>
                                </div>
                                {{#each post}}
                                    <div class="card" data-id="{{this.id}}" style="background-color: rgba(70, 69, 69, 0.555); width: 100%">
                                        <div class="card-body">
                                        <h5 class="card-title">{{this.title}}</h5><p>Posted by: {{this.User.firstName}} {{this.User.lastName}}</p>
                                        <p>{{this.content}}</p>
                                        <a href="post/{{this.id}}">View & Critique</a>
                                        </div>
                                    </div> 
                                {{/each}}
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
